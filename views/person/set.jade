extends ../layout/layout-person

block css_content
  link(rel='stylesheet', href='/vendor/Jcrop/css/jquery.Jcrop.css')
block content-main
  form#upload-form.form-horizontal(role='form', method='post', enctype='multipart/form-data')
    .form-group
      label.col-md-3.control-label 姓名
      .col-md-9
        input.form-control(disabled=true, value='#{user.name}')
    .form-group
      label.col-md-3.control-label 头像
      .col-md-9.edit-user-img
        img.avatar-middle(src='http://tp2.sinaimg.cn/1177291417/180/5654264661/1')
        .edit-user-img-btn
          input(type='file', name='upload-image')
          a.btn.btn-primary(href='javascript:{}') 选择头像
      #resize-user-img-btn.btn.btn-primary(data-toggle='modal',data-target='.bs-example-modal') dialog
      #resize-user-img-dialog.modal.fade.bs-example-modal(role='dialog', aria-labelledby='mySmallModalLabel', aria-hidden='true')
        .modal-dialog.modal-sm
          .modal-content
            .modal-header
              button.close(type='button', data-dismiss='modal', aria-hidden='true') &times;
              h4.modal-title 选择头像区域
            .modal-body
              .image-200-wrap
                img#image-200(src='/img/empty.gif')
            .modal-footer
              button.btn.btn-default(type='button', data-dismiss='modal') 关闭
              button.btn.btn-primary(type='button') 保存
    .form-group
      label.col-md-3.control-label(for='person-email') 邮箱
      .col-md-9
        input#person-email.form-control(name='email', value='#{user.email}')
    .form-group
      label.col-md-3.control-label(for='person-city') 城市
      .col-md-9
        input#person-city.form-control(name='city', value='#{user.city}')
    .form-group
      label.col-md-3.control-label(for='person-website') 网址/微博/blog
      .col-md-9
        input#person-website.form-control(name='website', value='#{user.website}')
    .form-group
      label.col-md-3.control-label(for='person-des') 一句话介绍
      .col-md-9
        input#person-des.form-control(name='des', value='#{user.des}')
    .form-group
      .col-md-9.col-md-offset-3
        button.btn.btn-success(type='submit') 保存
block js_content
  script(src='/vendor/ajaxForm/jquery.form.js')
  script(src='/vendor/Jcrop/js/jquery.Jcrop.js')
  script(src='/js/personSet.js')