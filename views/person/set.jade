extends ../layout/layout-person

block content-main
  form.form-horizontal(role='form')
    .form-group
      label.col-md-3.control-label 姓名
      .col-md-9
        input.form-control(disabled=true, value='#{user.name}')
    .form-group
      label.col-md-3.control-label 头像
      .col-md-9
        img.avatar-middle(src='http://tp2.sinaimg.cn/1177291417/180/5654264661/1')
    .form-group
      label.col-md-3.control-label 邮箱
      .col-md-9
        input.form-control(value='#{user.email}')
    .form-group
      label.col-md-3.control-label 城市
      .col-md-9
        input.form-control(value='北京')
    .form-group
      label.col-md-3.control-label 网址/微博/blog
      .col-md-9
        input.form-control(value='')
    .form-group
      label.col-md-3.control-label 一句话介绍
      .col-md-9
        input.form-control(value='')
    .form-group
      .col-md-9.col-md-offset-3
        button.btn.btn-success(type='submit') 保存