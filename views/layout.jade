doctype 5
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    nav
      a(href='/') 首页
      if user
        a(href='/post') 发布
        a(href='/logout') 登出
      else
        a(href='/login') 登录
        a(href='/reg') 注册
    if success
      = success
    if error
      = error
    block content