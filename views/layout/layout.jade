doctype html
html
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title= title
    link(rel='stylesheet', media='screen', href='/vendor/bootstrap-3.0.0/css/bootstrap.css')
    link(rel='stylesheet', href='/css/common.css')
    //put other css files in css_content
    block css_content
  body
    nav.navbar.navbar-default(role='navigation')
      .container
        .navbar-header
          button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-ex1-collapse')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/') Community

        .collapse.navbar-collapse.navbar-ex1-collapse
          ul.nav.navbar-nav
            li
              a(href='/') 首页
            if user
              li
                a(href='/post') 发布
          ul.nav.navbar-nav.navbar-right
            if user
              li
                a(href='/u/#{user.name}') #{user.name}
              li
                a(href='/logout') 退出
            else
              li
                a(href='/login') 登录
              li
                a(href='/reg') 注册
    - if((success && success.length > 0) || (error && error.length > 0))
      .container.alert.alert-info.alert-dismissable
        button.close(data-dismiss="alert" aria-hidden="true") ×
        | #{success || error}

    .container
      block content

    footer
      .container
        .row
          .col-md-12.text-center
            p Copyright &copy; Company 2013
    script(src='http://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js')
    script(src='/vendor/bootstrap-3.0.0/js/bootstrap.js')
    //put other js files in js_content
    block js_content