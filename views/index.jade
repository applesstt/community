extends layout

block content
  .row
    .box
      - for(var i = 0; i < posts.length; i++)
        .row
          .col-lg-6
            h2 #{posts[i]['title']}
          .col-lg-6.text-right
            h3: a(href='/u/#{posts[i]["name"]}') #{posts[i]['name']}
              small #{posts[i]['time']['day']}
          - if(typeof posts[i]['image'] !== 'undefined' && posts[i]['image'] !== '')
        .row
            img.img-responsive.img-border.img-left(src='/upload/images/200_#{posts[i]["image"]}')
            hr.visible-xs
            p !{posts[i]['post']}
      .col-lg-12.text-center
        ul.pager
          - if(!isFirst)
            li.previous
              a(href = '?page=#{page - 1}') ← 上一页
          - if((isFirst && !isLast) || !isLast)
            li.next
              a(href = '?page=#{page + 1}') 下一页 →

block resource
  script(src='javascripts/index.js')