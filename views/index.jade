extends layout/layout

block content
  - for(var i = 0; i < posts.length; i++)
    .panel
      h3
        a(href='/u/#{posts[i]["name"]}/#{posts[i]["time"]["day"]}/#{posts[i]["title"]}') #{posts[i]['title']}
      .row
        .col-md-6.text-left
          a.h4(href='/u/#{posts[i]["name"]}') #{posts[i]['name']}
        time.col-md-6.text-right.text-muted #{posts[i]['time']['day']}
      p
        - if(typeof posts[i]['image'] !== 'undefined' && posts[i]['image'] !== '')
          img.img-responsive.img-border.img-left(src='/upload/images/200_#{posts[i]["image"]}')
        hr.visible-xs
        p !{posts[i]['post']}
  .text-center
    ul.pager
      - if(!isFirst)
        li.previous
          a(href = '?page=#{page - 1}') ← 上一页
      - if((isFirst && !isLast) || !isLast)
        li.next
          a(href = '?page=#{page + 1}') 下一页 →

block js_content
  script(src='js/index.js')